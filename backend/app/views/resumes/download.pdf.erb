<!-- Header -->
<style type="text/css">
  .header {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap-reverse;
  }

  .contactWrapper {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
  }

  .image {
    width: 6cm;
    height: 6cm;
    border-radius: 50%;
    background-color: #FFF5EA;
  }

  .image > img {
    width: 100%;
    height: 100%;
    border-radius: 50%;
  }

  .contact {
    align-self: center;
    font-size: 12px;
    padding: 0 20px;
    flex: 2;
    -webkit-flex: 2;
  }

  .logo {
    margin-bottom: 20px;
    align-self: top;
  }

  .logo > img {
    height: 50px;
  }
</style>

<!-- CV -->
<style type="text/css">
  .cv { /* stylelint-disable */
    padding: 25px 25px;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center; /* wkhtmltopdf uses this one */
    -webkit-justify-content: center;
    justify-content: center;
    height: 100%;
    overflow: auto;
  }

  .cv > div {
    width: 100%;
  }

  .section {
    position:relative;
  }

  .section > h2 {
    margin-left: 33.33%;
    border-bottom: 3px solid;
    display: inline-block;
  }

  .section textarea:focus {
    outline: none;
    background-color: #fafafa;
  }

  .item {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    font-size: 14pt;
    flex-wrap: wrap;
    position: relative;
  }

  .item::after {
    content: "";
    clear: both;
    display: table;
  }

  .item::before {
    margin-left: -1px;
    content: " ";
    width: 3px;
    background-image: url(<%= image_url('gold-dot.svg') %>);
    background-position: center;
    background-repeat: repeat-y;
    height: 100%;
    position: absolute;
    left: 11.10%;
    top: 0;
    bottom: 0;
  }

  .meta {
    width: 33.33%;
    position: relative;
  }

  .when {
    float:left;
    width: 30%;
    font-size: 14pt;
    font-weight: 700;
    text-align: right;
    padding-right: 10px;

  }

  .when textarea {
    text-align: right;
  }

  .where {

    float:right;
    width: 60%;
    padding-left: 10px;
    padding-right: 10px;
    padding-bottom: 10px;

  }

  .where > *:first-child {
    font-weight: 700;
  }

  .description {
    flex: 2;
    -webkit-flex: 2;
    width: 66.66%;
    white-space: pre-line;
    padding-bottom: 10px;
  }

  .header {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap-reverse;
  }

  .contactWrapper {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
  }

  .contact {
    align-self: center;
    font-size: 12pt;
    padding: 0 20px;
    flex: 2;
    -webkit-flex: 2;
  }

  .logo {
    margin-bottom: 20px;
    align-self: top;
  }

  .logo > img {
    height: 50px;
  }

  @media (max-width: 400px) {
    .section > h2 {
      margin-left: 0;
    }

    .section input {
      margin-left: 0;
    }

    .where {
      flex: 2;
      -webkit-flex: 2;
    }

    .when {
      text-align: left;
    }
  }
</style>

<style type="text/css">
  @page {
    size: A4;
    margin: 0;
    display: block;
  }
  @media print {
    html, body {
      margin: 1cm 2cm;
      width: 210mm;
      height: 297mm;
    }
    .header {
      width: 100%;
    }
    .image {
    }
  }
</style>

